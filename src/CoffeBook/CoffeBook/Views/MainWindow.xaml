<Window x:Class="CoffeBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeBook"
        mc:Ignorable="d"
        Title="CoffeeBook" Height="350" Width="525">
    <StackPanel Margin="10" Orientation="Vertical">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="CoffeeBook" MinWidth="150">
                <TextBlock.Style>
                    <Style>
                        <Setter Property="TextBlock.FontSize" Value="25"/>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBox x:Name="user_name" Text="" HorizontalAlignment="Left" Margin="3,3,0,3" MinWidth="100" Grid.Column="2" Grid.ColumnSpan="2" Width="100"/>
            <TextBox x:Name="password" Text="" HorizontalAlignment="Left" Margin="3,3,0,3" MinWidth="100" Grid.Column="3" Grid.ColumnSpan="2" Width="100"/>
            <Button Command="" Content="Log in" Margin="3" Grid.Column="4"/>
        </Grid>
    </StackPanel>
</Window>
